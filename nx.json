{
  "$schema": "node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*"
    ],
    "prod": [
      "{projectRoot}/src/**/*",
      "{projectRoot}/package.json",
      "{projectRoot}/tsconfig.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "prod",
        "^prod"
      ],
      "outputs": [
        "{projectRoot}/lib",
        "{projectRoot}/types"
      ],
      "cache": true
    },
    "test-typings": {
      "inputs": [
        "default",
        "^prod"
      ],
      "cache": true
    },
    "test-unit": {
      "dependsOn": [
        "build"
      ],
      "inputs": [
        "default",
        "^prod"
      ],
      "cache": true
    }
  },
  "workspaceLayout": {
    "libsDir": "packages"
  }
}
